<h1>Welcome!</h1>
<div class = "container">
	<fieldset>
	<legend>Register</legend>
	<form action="/users" method = "post">
		<input type="hidden" name = "authenticity_token" value = "<%form_authenticity_token%>">
		<label for="first_name">First Name</label>
		<input type="text" name = "user[first_name]" id = "first_name">
		<br>
		<label for="last_name">Last Name</label>
		<input type="text" name = "user[last_name]" id = "last_name">
		<br>
		<label for="email">Email</label>
		<input type="text" name = "user[email]" id = "email">
		<br>
		<label for="location">Location</label>
		<input type="text" name = "user[location]" id = "location">
		<select name="user[state]" id="state">
			<option value="AZ">AZ</option>
			<option value="CA">CA</option>
			<option value="NY">NY</option>
			<option value="IL">IL</option>
			<option value="OH">OH</option>
		</select>
		<br>
		<label for="password">Password</label>
		<input type="password" name = "user[password]" id = "password">
		<br>
		*Password should be at least 8 characters
		<br>
		<label for="password_confirmation">Confirm PW</label>
		<input type="password" name = "user[password_confirmation]" id = "password_confirmation">
		<br>
		<input type="submit" value = "Register" class = "btn btn-primary">
	</form>
</fieldset>
</div>


<div class = "container">
	<fieldset>
	<legend>Login</legend>
	<form action="/sessions/login" method = "post">
		<input type="hidden" name = "authenticity_token" value = "<%form_authenticity_token%>">
		<label for="email">Email</label>
		<input type="text" name = "email" id = "email">
		<br>
		<label for="password">Password</label>
		<input type="password" name = "password" id = "password">
		<br>
		<input type="submit" class = "btn btn-success" value = "Login">

	</form>
</fieldset>
</div>


